{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "StorageAccountName": {
      "type": "array",
      "defaultValue": [
        "saceur001"
      ],
      "metadata": {
        "description": "Name of Storage Account"
      }
    },
    "TAG": {
      "type": "string",
      "metadata": {
        "description": "TAG Name"
      }
    },
    "Location": {
      "type": "string",
      "allowedValues": [
        "eastasia",
        "southeastasia",
        "centralus",
        "westus",
        "northcentralus",
        "southcentralus",
        "northeurope",
        "westeurope",
        "japanwest",
        "japaneast",
        "brazilsouth",
        "australiaeast",
        "australiasoutheast",
        "southindia",
        "centralindia",
        "westindia",
        "canadacentral",
        "canadaeast",
        "uksouth",
        "ukwest",
        "westcentralus",
        "westus2",
        "koreacentral",
        "koreasouth",
        "francecentral",
        "francesouth",
        "australiacentral",
        "australiacentral2",
        "southafricanorth",
        "southafricawest"
      ],
      "metadata": {
        "description": "Region"
      }
    }
  },
  "functions": [],
  "variables": {},
  "resources": [
    {
      "name": "[length(parameters('StorageAccountName'))]",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2019-06-01",
      "tags": {
        "IAC": "[parameters('TAG')]"
      },
      "copy": {
        "name": "Stgcpy",
        "count": "[parameters('StorageAccountName')[copyIndex()]]"
      },
      "location": "[parameters('Location')]",
      "kind": "StorageV2",
      "sku": {
        "name": "Standard_ZRS",
        "tier": "Standard"
      },
      "properties": {
        "minimumTlsVersion": "TLS1_0",
        "allowBlobPublicAccess": false,
        "networkAcls": {
          "bypass": "AzureServices",
          "virtualNetworkRules": [],
          "ipRules": [],
          "defaultAction": "Allow"
        },
        "supportsHttpsTrafficOnly": true,
        "encryption": {
          "services": {
            "file": {
              "keyType": "Account",
              "enabled": true
            },
            "blob": {
              "keyType": "Account",
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        },
        "accessTier": "Hot"
      }
    }
  ],
  "outputs": {}
}
